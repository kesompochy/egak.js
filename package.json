    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-raw": "^1.0.3",
    "vitest": "^0.34.1",
    "vitest-canvas-mock": "^0.3.3",
    "vitest-webgl-canvas-mock": "^1.1.0"
  }
